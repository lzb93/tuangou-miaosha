page {
  padding-top: 80rpx;
  background-color: #EFEFF4;
}
.nav_wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  border-bottom: 1rpx solid #E5E5E5;
  background-color: #fff;
}
.nav_item {display: inline-block; font-size: 28rpx;}
.nav_item_s {padding: 10rpx 25rpx; color: #7A7A7C; text-align: center;}
.nav_item_s > view {color: #7A7A7C;}
.nav_item_s.selected {color: #673826;}
.nav_item_s.selected > view {color: #673826;}

.comment_wrap {
  margin-top: 20rpx;
  padding: 0 25rpx 20rpx;
  background-color: #fff;
}
.comment_item {
  margin-top: 20rpx;
  padding: 20rpx 0 0;
  border-top: 1rpx solid #EFEFF4;
}
.comment_title {
  font-size: 30rpx;
}
.comment_link {
  font-size: 26rpx;
}
.comment_avatar {
  overflow: hidden;
  display: block;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.comment_name {
  margin-left: 20rpx;
  font-size: 28rpx;
}
.comment_date {
  font-size: 24rpx;
}
.comment_text {
  margin: 20rpx 0;
  font-size: 28rpx;
}
.comment_type {
  font-size: 20rpx;
}
.comment_img {
  width: 150rpx;
  height: 150rpx;
  margin: 0 10rpx 10rpx 0;
}