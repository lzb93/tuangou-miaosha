page {
  padding-top: 100rpx;
}

.nav_container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  white-space: nowrap;
  background-color: #fff;
}
.nav_item {
  display: inline-block;
  line-height: 96rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
  border-bottom: 4rpx solid transparent;
}
.nav_item.active {
  border-bottom: 4rpx solid #673826;
}

.main {
  padding: 30rpx 25rpx 0;
}
.product_item {
  width: 345rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.item_content {
  padding: 10rpx;
}
.product_item .item_img {
  width: 346rpx;
  height: 350rpx;
  background-color: #fefefe;
}
.product_item .item_img image {
  display: block;
  width: 100%;
  height: 100%;
}
.item_content .item_title {
  height: 80rpx;
  font-size: 24rpx;
}
.item_content .item_money {
  margin-top: 10rpx;
  font-size: 26rpx;
}