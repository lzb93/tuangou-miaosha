
.address_wrap {
  padding: 0 25rpx;
  font-size: 28rpx;
}
.address_item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #CDCDCD;
}
.title {
  float: left;
  width: 18%;
  height: 1.4rem;
  line-height: 1.4rem;
}
.title_input {
  float: left;
  width: 82%;
  padding: 0 20rpx;
}
.address_region {
  height:1.4rem;
  line-height:1.4rem;
}
.icon_down {
  float: right;
  width: 5%;
  height: 14rpx;
  margin-top: 20rpx;
}
.picker_wrap {
  float: left;
  width: 95%;
  line-height: 1.4rem;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 30rpx 0;
  font-size: 34rpx;
  color: #fff;
}
.footer .footer_btn {
  font-size: 34rpx;
  color: #fff;
  text-align: center;
}

.mask {
  z-index: 98;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(0,0,0,0.5);
}
.regionPop {
  z-index: 99;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  width: 90%;
  background-color: #fff;
}
.scroll_y {
  height: 100%;
}
.item {
  padding: 27rpx;
  border-bottom: 1rpx solid #EFEFF4;
  font-size: 26rpx;
}
.item:last-child {
  border-bottom: 0;
}

