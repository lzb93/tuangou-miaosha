
page {
  background-color: #EFEFF4;
  padding-bottom: 106rpx;
}
.add {
  position: relative;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.icon_add {
  display: block;
  width: 35rpx;
  height: 44rpx;
  margin: 100rpx 15rpx 100rpx 25rpx;
}
.add_detail {
  width: 86%;
  padding: 70rpx 25rpx 70rpx 0;
  font-size: 26rpx;
}
.add_line {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 10rpx;
}

.order_item {
  margin-bottom: 20rpx;
  background-color: #fff;
}
.order_item_header {
  padding: 25rpx;
}
.title {
  margin-left: 27rpx;
  font-size: 26rpx;
}
.icon_seller {
  display: block;
  width: 34rpx;
  height: 32rpx;
  margin-top: 3rpx;
}
.icon_right {
  display: block;
  width: 13rpx;
  height: 23rpx;
  margin: 8rpx 0 0 20rpx;
}
.order_state {
  font-size: 25rpx;
}

.seller_content {
  margin-bottom: 20rpx; 
  padding: 12rpx 20rpx;
  background: #F9F9F9;
}
.seller_content > image {
  display: block;
  width: 140rpx;
  height: 140rpx;
}
.seller_text {
  width: 570rpx;
  padding-left: 20rpx;
  padding-right: 5rpx;
}
.seller_text_inner_left {
  width: 400rpx; 
}
.seller_m {
  padding: 0 25rpx 20rpx;
  font-size: 26rpx;
  text-align: right;
}
.order_item_footer {
  padding: 20rpx 26rpx;
  border-top: 1rpx solid #E5E5E5;
}
.order_item_footer > view {
  font-size: 26rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
}
.half_btn {
  width: 50%;
}
.footer_btn {
  padding: 35rpx 0;
  font-size: 28rpx;
  text-align: center;
}
.footer_btn.remind {
  color: #fff;
}
.refund_btn {
  padding: 8rpx 25rpx;
  border: 1rpx solid #E5E5E5;
  border-radius: 30rpx;
  font-size: 24rpx;
}
.order_info {
  margin-top: 20rpx;
  padding: 20rpx 0;
  font-size: 24rpx;
  background-color: #fff;
}
.order_info view {
  margin-bottom: 20rpx;
  padding: 0 25rpx;
}
.order_info view:last-child {
  margin-bottom: 0;
}