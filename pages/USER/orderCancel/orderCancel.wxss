
page {
  background-color: #EFEFF4;
  padding-bottom: 106rpx;
}
.order {
  padding: 12rpx 20rpx;
  background: #F9F9F9;
}
.seller_img {
  display: block;
  width: 140rpx;
  height: 140rpx;
}
.seller_detail {
  width: 570rpx;
  padding-left: 20rpx;
  font-size: 26rpx;
}

.cancel_item {
  padding: 30rpx 25rpx;
}
.order_cancel {
  margin-top: 20rpx;
  background-color: #fff;
  font-size: 25rpx;
}
.select {
  color: #B3B1B2;
}
.icon_right {
  display: block;
  width: 14rpx;
  height: 24rpx;
  margin: 4rpx 0 0 20rpx;
}

.order_remark {
  margin-top: 20rpx;
  padding: 30rpx 25rpx;
  background-color: #fff;
  font-size: 26rpx;
}
.remark_title {
  margin-bottom: 10rpx;
}
.order_remark > textarea {
  width: 100%;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
}
.footer_btn {
  padding: 35rpx 0;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  background: rgba(0,0,0,0.6);
}
.pop {
  z-index: 999;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 750rpx;
  background-color: #fff;
  font-size: 26rpx;
}
.pop_title {
  padding: 34rpx 0 0;
  text-align: center;
}
.pop_inner {
  height: 575rpx;
  padding: 25rpx;
}
.item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #CDCDCD;
}
.item:last-child {
  border-bottom: 0;
}
.unchecked {
  display: block;
  width: 30rpx;
  height: 30rpx;
  margin-top: 2rpx;
}
.pop_footer {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 36rpx 0;
  font-size: 26rpx;
  color: #fff;
  text-align: center;
}