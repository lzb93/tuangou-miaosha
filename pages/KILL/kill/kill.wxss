page {
  padding-top: 96rpx;
}

.scroll_wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.scroll_item {
  display: inline-block;
  padding: 10rpx 0 0 42rpx; 
}
.scroll_item:last-child {
  padding-right: 42rpx; 
}
.scroll_item > view {
  font-size: 26rpx;
  color: #B3B1B2;
  text-align: center;
}
.scroll_item.active > view {
  color: #673826;
}

.product_wrap {
  padding-top: 10rpx;
}
.product_item {
  width: 370rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  font-size: 24rpx;
}
.product_item .item_img {
  display: block;
  width: 100%;
  height: 370rpx;
  background-color: #fefefe;
}
.item_inner {
  padding: 20rpx 22rpx;
}
.title {
  width: 170rpx;
}
.item_text {
  height: 90rpx;
  padding: 12rpx 0;
}
.miaosha {
  position: relative;
  width: 150rpx;
  padding-top: 8rpx; 
  border-radius: 9rpx;
  font-size: 16rpx;
  color: #fff;
  text-align: center;
}
.miaosha > view {
  z-index: 2;
  position: relative;
  color: #fff;
}
.miaosha > image {
  position: absolute;
  top: 5rpx;
  left: 0;
  width: 100%;
  height: 30rpx;
}
.icon_money {
  font-size: 20rpx;
}
.money {
  font-size: 30rpx;
}
.sale_money {
  margin-left: 10rpx;
  font-size: 20rpx;
  text-decoration: line-through;
}
.btn_miaosha {
  width: 112rpx;
  padding: 15rpx 0;
  border-radius: 8rpx;
  font-size: 20rpx;
  text-align: center;
}
.btn_miaosha > view {
  color: #fff;
}

.jijiang {
  background-color: #A46D58;
}